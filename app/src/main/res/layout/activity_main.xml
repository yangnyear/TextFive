<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swpuiot.textfive.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/btn_prov"
            android:layout_width="96dp"
            android:layout_height="49dp"
            android:background="@drawable/btn_bacgrangd_prov"
            android:textColor="#ffffff"
            android:text="@string/btn_prov_text" />

        <Button
            android:id="@+id/btn_image"
            android:layout_width="96dp"
            android:layout_height="49dp"
            android:background="@drawable/btn_bacgrangd_prov"
            android:textColor="#ffffff"
            android:text="@string/btn_image_text" />

        <Button
            android:id="@+id/btn_host"
            android:layout_width="96dp"
            android:layout_height="49dp"
            android:background="@drawable/btn_bacgrangd_prov"
            android:textColor="#ffffff"

            android:text="@string/btn_host_text" />

        <Button
            android:id="@+id/btn_Collection"
            android:layout_width="96dp"
            android:layout_height="49dp"
            android:background="@drawable/btn_bacgrangd_prov"
            android:textColor="#ffffff"
            android:text="@string/btn_Collection_text" />
    </LinearLayout>
    <ListView
        android:id="@+id/image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout">

    </ListView>


</RelativeLayout>










